{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2022": true
  },
  "extends": [
    "@bitovi/eslint-config/rules/base",
    "@bitovi/eslint-config/rules/jest",
    "prettier"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "curly": "error",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": false,
        "tabWidth": 2,
        "trailingComma": "all",
        "useTabs": false
      }
    ]
  }
}
